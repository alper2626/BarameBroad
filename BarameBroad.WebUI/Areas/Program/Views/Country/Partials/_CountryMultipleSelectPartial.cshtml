@model List<BaseEntities.Concrete.SelectBoxModel>

@{
    var list = ViewData["SelectedCountry"] as List<Guid>;
    if (list == null)
        list = new List<Guid>();
}

<select class="form-control kt-select2" id="country_select" style="width: 100%" multiple="multiple" name="Countries">
    
    @foreach (var item in Model)
    {
        if (list.Contains(item.Id))
        {
            <option value="@item.Id" selected="selected">@item.DisplayValue</option>
        }
        else
        {
            <option value="@item.Id">@item.DisplayValue</option>
        }

    }
</select>

<script type="text/javascript">

    $('#country_select').select2({
    });

</script>