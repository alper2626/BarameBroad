@using BaseEntities.Database
@model BaseEntities.Database.SocialNetworkEntity

@{
    ViewData["Title"] = "Sosyal Medya Oluştur";
}

<div class="card card-custom mx-4">
    <div class="card-header">
        <div class="card-title">
            <h3 class="card-label">
                Sosyal Medya Ekle
            </h3>
        </div>
    </div>
    <div class="card-body">

        <!--begin::Form-->
        <form class="kt-form" method="post" asp-area="SiteConfig" asp-controller="SocialNetwork" asp-action="Create">
            <div class="card-body">
                <div class="kt-section kt-section--first">
                    <div class="form-group">
                        @Html.LabelFor(s => s.Icon, "Icon")
                        @Html.TextBoxFor(s => s.Icon, new { @class = "form-control", placeholder = "İcon Girin." })
                        <small>Yanlızca fontawesome.com dan icon seçebilirsiniz. örn : fa-heart </small>
                        @Html.ValidationMessageFor(s => s.Icon)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(s => s.Link, "Link")
                        @Html.TextBoxFor(s => s.Link, new { @class = "form-control", placeholder = "Link Girin."})
                        @Html.ValidationMessageFor(s => s.Link)
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <div class="kt-form__actions">
                    <button type="submit" class="btn btn-primary w-100">Kaydet</button>
                </div>
            </div>
        </form>

        <!--end::Form-->

    </div>
</div>
