@using BaseEntities.Database
@using DevExtreme.AspNet.Mvc
@model UserComment

@{
    ViewData["Title"] = "Kullanıcı Yorumu Oluştur";
}
<script type="text/javascript">
    $(document).ready(function () {
        var startDate = $("#startd").dxDateBox({
            onValueChanged: function (e) {
