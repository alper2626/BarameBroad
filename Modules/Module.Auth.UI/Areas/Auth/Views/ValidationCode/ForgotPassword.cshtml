@{
    Layout = null;
}
<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="description" content="Admin Panel Girişi">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Admin Panel Girişi</title>
    <!--begin::Fonts -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700|Roboto:300,400,500,600,700">
    <!--end::Fonts -->
<link href="~/css/Admin/login-1.css" rel="stylesheet" />
    <link href="~/admin/css/theme/plugins.bundle.css" rel="stylesheet" />
    <link href="~/admin/css/theme/prismjs.bundle.css" rel="stylesheet" />
    <link href="~/admin/css/theme/style.bundle.css" rel="stylesheet" />
    <link href="~/admin/css/theme/light-base.css" rel="stylesheet" />
    <link href="~/admin/css/theme/light.css" rel="stylesheet" />
    <link href="~/admin/css/theme/dark-brand.css" rel="stylesheet" />
    <link href="~/admin/css/theme/dark.css" rel="stylesheet" />

    <script src="~/js/jquery.min.js"></script>
    <script src="~/admin/js/theme/plugins.bundle.js"></script>
</head>

<!--begin::Body-->
<body id="kt_body" class="header-fixed header-mobile-fixed subheader-enabled subheader-fixed aside-enabled aside-fixed aside-minimize-hoverable page-loading">
    @if (TempData["Error"] != null)
    {
        <input type="text" id="error" hidden="hidden" value="@TempData["Error"]" />
    }
    else if (TempData["Success"] != null)
    {
        <input type="text" id="success" hidden="hidden" value="@TempData["Success"]" />
    }
    <!--begin::Main-->
    <div class="d-flex flex-column flex-root">
        <!--begin::Login-->
        <div class="login login-1 login-signin-on d-flex flex-column flex-lg-row flex-column-fluid bg-white" id="kt_login">
            <!--begin::Aside-->
            <div class="login-aside d-flex flex-column flex-row-auto" style="background-color: #F2C98A;">
                <!--begin::Aside Top-->
                <div class="d-flex flex-column-auto flex-column pt-lg-40 pt-15">
                    <!--begin::Aside header-->
                    <a href="#\" class="text-center mb-10">

                    </a>
                    <!--end::Aside header-->
                    <!--begin::Aside title-->
                    <h3 class="font-weight-bolder text-center font-size-h4 font-size-h1-lg" style="color: #986923;">
                        Klabs Teknoloji
                        <br />
                        <br /> E-Ticaret Yönetim Paneli
                    </h3>
                    <!--end::Aside title-->
                </div>
                <!--end::Aside Top-->
                <!--begin::Aside Bottom-->
                <div class="aside-img d-flex flex-row-fluid bgi-no-repeat bgi-position-y-bottom bgi-position-x-center" style="background-image: url(../../../assets/media/svg/illustrations/login-visual-1.svg)"></div>
                <!--end::Aside Bottom-->
            </div>
            <!--begin::Aside-->
            <!--begin::Content-->
            <div class="login-content flex-row-fluid d-flex flex-column justify-content-center position-relative overflow-hidden p-7 mx-auto">
                <!--begin::Content body-->
                <div class="d-flex flex-column-fluid flex-center">
                    <!--begin::Signin-->
                    <div class="login-form login-signin">
                        <!--begin::Form-->

                        <form class="kt-form" method="post" asp-controller="ValidationCode" asp-action="ForgotPassword" asp-area="Auth" novalidate="novalidate" id="kt_login_signin_form">
                            @Html.AntiForgeryToken()
                            <!--begin::Title-->
                            <div class="pb-13 pt-lg-0 pt-5">
                                <h3 class="font-weight-bolder text-dark font-size-h4 font-size-h1-lg">Şifre Sıfırlama </h3>
                                <span class="text-muted font-weight-bold font-size-h4">
                                    Şifrenizi mi unuttunuz ?

                                </span>
                            </div>
                            <!--begin::Title-->
                            @Html.AntiForgeryToken()
                            <div class="form-group">
                                <label for="mailAddress" class="font-size-h6 font-weight-bolder text-dark"> E-Posta Adresi</label>
                                <input type="email" placeholder="E-Posta Adresinizi Girin" name="mailAddress" id="mailAddress" class="form-control form-control-solid h-auto py-6 px-6 rounded-lg" />
                            </div>
                            <div class="kt-login__actions">
                                <button type="submit" class="btn btn-primary btn-elevate kt-login__btn-primary m-auto w-100">Kod Gönder</button>
                            </div>
                            @Html.ValidationSummary()

                        </form>
                        <!--end::Form-->
                    </div>
                    <!--end::Signin-->

                </div>
                <!--end::Content body-->
                <!--begin::Content footer-->
                <div class="d-flex justify-content-lg-start justify-content-center align-items-end py-7 py-lg-0">
                    <div class="text-dark-50 font-size-lg font-weight-bolder mr-10">
                        <span class="mr-1">@DateTime.Now.Year©</span>
                        <a href="https://www.linkedin.com/in/alper-basda-26612168" target="_blank" class="text-dark-75 text-hover-primary">Klabs Teknoloji</a>
                    </div>

                    <a href="https://www.linkedin.com/in/alper-basda-26612168" target="_blank" class="text-primary ml-5 font-weight-bolder font-size-lg">Takımımız</a>
                    <a href="https://www.linkedin.com/in/alper-basda-26612168" target="_blank" class="text-primary ml-5 font-weight-bolder font-size-lg">İletişim</a>
                </div>
                <!--end::Content footer-->
            </div>
            <!--end::Content-->
        </div>
        <!--end::Login-->
    </div>
    <!--end::Main-->
    <!--begin::Global Config(global config for global JS scripts)-->
    <script>
        var KTAppSettings = {
            "breakpoints": { "sm": 576, "md": 768, "lg": 992, "xl": 1200, "xxl": 1400 },
            "colors": {
                "theme": {
                    "base": {
                        "white": "#ffffff",
                        "primary": "#3699FF",
                        "secondary": "#E5EAEE",
                        "success": "#1BC5BD",
                        "info": "#8950FC",
                        "warning": "#FFA800",
                        "danger": "#F64E60",
                        "light": "#E4E6EF",
                        "dark": "#181C32"
                    },
                    "light": {
                        "white": "#ffffff",
                        "primary": "#E1F0FF",
                        "secondary": "#EBEDF3",
                        "success": "#C9F7F5",
                        "info": "#EEE5FF",
                        "warning": "#FFF4DE",
                        "danger": "#FFE2E5",
                        "light": "#F3F6F9",
                        "dark": "#D6D6E0"
                    },
                    "inverse": {
                        "white": "#ffffff",
                        "primary": "#ffffff",
                        "secondary": "#3F4254",
                        "success": "#ffffff",
                        "info": "#ffffff",
                        "warning": "#ffffff",
                        "danger": "#ffffff",
                        "light": "#464E5F",
                        "dark": "#ffffff"
                    }
                },
                "gray": {
                    "gray-100": "#F3F6F9",
                    "gray-200": "#EBEDF3",
                    "gray-300": "#E4E6EF",
                    "gray-400": "#D1D3E0",
                    "gray-500": "#B5B5C3",
                    "gray-600": "#7E8299",
                    "gray-700": "#5E6278",
                    "gray-800": "#3F4254",
                    "gray-900": "#181C32"
                }
            },
            "font-family": "Poppins"
        };</script>
    <!--end::Global Config-->
    <script src="~/admin/js/custom/jquery.validate.js"></script>
    <script src="~/admin/js/custom/jquery.validate.unobtrusive.js"></script>
    <script src="~/admin/js/theme/scripts.bundle.js"></script>
    <script src="~/admin/js/custom/events/global.js"></script>
    <script src="~/admin/js/custom/events/messages.js"></script>
    <script src="~/admin/js/custom/events/message-events.js"></script>
</body>
<!--end::Body-->
</html>
